<h2 class="center">Tweets</h2>
<table class="table">
  <thead>
    <tr>
      <th>Description</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% tweets.forEach(tweet => { %>
    <tr>
      <td>
        <a href="<%= `/tweets/${tweet._id}` %>">
          <%= tweet.description %>
        </a>
      </td>
      <td>
        <a href="<%=`tweets/${tweet._id}/edit`%>">
          Edit
        </a>
      </td>
      <td>
        <a href="<%= `tweets/${tweet._id}/delete?_method=DELETE` %>" onclick="return confirm('Are you sure you want to delete the tweet?')" a>Delete</a>
      </td>
    </tr>
    <% }); %>
  </tbody>
</table>