  <body>
        <div class="container data-form">
          <img src="../images/logo.jpg" alt="logo" />
            <header>Chitter-Chatter</header>
            <h1>Edit Profile</h1>
        
        <form class="form" id="form" action="<%=`/users/${user._id}/update?_method=PUT`%>" method="POST" autofocus>
          <div class="form-control">
            <label for="firstName" class="col-sm-2 col-form-label">First Name:</label>
            <input type="text" id="firstName" name="firstName" value="<%= user.name.first %>" placeholder="John"/>
            <i class="fa fa-check-circle"></i>
            <i class="fa fa-exclamation-circle"></i>
            <small> Error Message </small>
          </div>

          <div class="form-control">
              <label for="lastName" class="col-sm-2 col-form-label">Last Name:</label>
              <input type="text" id="lastName" name="lastName" value="<%= user.name.last %>" placeholder="Doe"/>
              <i class="fa fa-check-circle"></i>
              <i class="fa fa-exclamation-circle"></i>
              <small> Error Message </small>
          </div>

          <div class="form-control"> 
            <label for="userName" class="col-sm-2 col-form-label">Username:</label>
            <input type="text" id="userName" name="userName" value="<%= user.name.userName %>"placeholder="JhonDoe123"/>
            <i class="fa fa-check-circle"></i>
            <i class="fa fa-exclamation-circle"></i>
            <small> Error Message </small>
          </div>

          <div class="form-control">
            <label for="email" class="col-sm-2 col-form-label">Email:</label>
            <input type="email" class="input-box" id="email" name="email" value="<%= user.email %>" placeholder="user@example.com"/>
            <i class="fa fa-check-circle"></i>
            <i class="fa fa-exclamation-circle"></i>
            <small> Error Message </small>
          </div>

          <div class="form-control">
            <label for="password" class="col-sm-2 col-form-label">Password:</label>
            <input type="password" id="password" name="password" value="<%= user.password %>" placeholder="Password"/>
            <i class="fa fa-check-circle"></i>
            <i class="fa fa-exclamation-circle"></i>
            <small> Error Message </small>
          </div>

          <div class="form-control">
            <label for="location" class="col-sm-2 col-form-label">Location:</label>
            <input type="text" id="location" value="<%= user.location %>" placeholder="Denver" />
            <i class="fa fa-check-circle"></i>
            <i class="fa fa-exclamation-circle"></i>
            <small> Error Message </small>
          </div>

          <div class="form-control">
            <label for="date" class="col-sm-2 col-form-label" value="<%= user.date %>" >Date of Birth:</label>
            <input type="date" id="date" name="date"/>
            <i class="fa fa-check-circle"></i>
            <i class="fa fa-exclamation-circle"></i>
            <small> Error Message </small>
          </div>

          <div class="form-control"> 
            <label for="biography" class="col-sm-2 col-form-label">Biography:</label>
            <input type="text" id="biography" name="biography" value="<%= user.biography %>" placeholder="Student"/>
            <i class="fa fa-check-circle"></i>
            <i class="fa fa-exclamation-circle"></i>
            <small> Error Message </small>
          </div>
          
          <button type="submit">Save</button>

      </form>
    </div>

    <script src="../public/sign-up/signup.js"></script>
    <script type="text/javascript" src="../public/sign-up/signup.js"></script>

