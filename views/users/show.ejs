<div class="container" style="margin-top: 100px !important;">
  <% if(user){ %>
      <body id="userprofile">
            <div class="card mt-4 text-center">
              <div class="card-body">
                <h4 class="card-title"><%= user.fullName %></h4>
                <div class="card-text mb-2">
                  <h6 id="username">Username: @<%= user.userName %></h6>
                  <h6 id="email">Email: <%= user.email%></h6>
                  <p> Birthday: <%= user.date.toLocaleDateString()%> </p>
                </div>
                <div class="card-text mb-2">About: <%= user.biography%></div>
              </div>
              <% if(loggedIn && currentUser.userName == user.userName) { %>
                <a class="button" href="<%=`/users/${user._id}/edit`%>"> Edit Account</a>
                <a class="button" href="<%= `/users/${user._id}/delete?_method=DELETE` %>"
                  onclick="return confirm('Are you sure you want to delete this record?')" a>Delete Account</a>
              <% } %>
            </div>
        </div>
      </body>
  <% } else { %>
      <fieldset class="border">
          <div class="text-center">
              <h3>User doesn't exist</h3></div>
              <%if(loggedIn){ %>
                  <div class="text-center">
                      <a href="/">
                          <span class="button">Go back home</span>
                      </a>
                  </div>
              <%}else{ %>
                  <div class="text-center">
                      <a href="/users/login">
                          <span class="button">Login</span>
                      </a>
                  </div>
                  <br>
              <%}%>
      </fieldset>
  <%} %>
</div>